@{
    ViewBag.Title = "Update";
    Layout = "../Shared/Layout.cshtml";
}
@model ILB.ApplicationServices.Contacts.UpdateContactQueryResult

@using (Html.BeginForm())
{
    <legend>Update Contact</legend>
    @Html.HiddenFor(q => q.Command.Id)
    <div class="form-group">
        @Html.LabelFor(q => q.Command.FirstName)
        @Html.TextBoxFor(q => q.Command.FirstName, new { @class="form-control"})
        @Html.ValidationMessageFor(q => q.Command.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(q => q.Command.Surname)
        @Html.TextBoxFor(q => q.Command.Surname, new { @class="form-control"})
        @Html.ValidationMessageFor(q => q.Command.Surname)
    </div>
    <div class="form-group">
        @Html.LabelFor(q => q.Command.Address1)
        @Html.TextBoxFor(q => q.Command.Address1, new { @class="form-control"})
        @Html.ValidationMessageFor(q => q.Command.Address1)
    </div>
    <div class="form-group">
        @Html.LabelFor(q => q.Command.Address2)
        @Html.TextBoxFor(q => q.Command.Address2, new { @class="form-control"})
        @Html.ValidationMessageFor(q => q.Command.Address2)
    </div>
    <div class="form-group">
        @Html.LabelFor(q => q.Command.CountyId)
        @Html.DropDownListFor(q => q.Command.CountyId, Model.Counties.Select(q=> new SelectListItem() { Text = q.Name, Value = q.Id.ToString(), Selected = q.Id == Model.Command.CountyId  }), new { @class="form-control"})
        @Html.ValidationMessageFor(q => q.Command.CountyId)
    </div>    
    <div class="form-group">
        @Html.LabelFor(q => q.Command.CountryId)
        @Html.DropDownListFor(q => q.Command.CountryId, Model.Countries.Select(q=> new SelectListItem() { Text = q.Name, Value = q.Id.ToString(), Selected = q.Id == Model.Command.CountyId }), new { @class="form-control"})
        @Html.ValidationMessageFor(q => q.Command.CountyId)
    </div>
    <input type="submit" value="Save" class="btn btn-default"/>    

}
